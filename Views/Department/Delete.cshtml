@model NhanSu.Models.Department

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa phòng ban</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa phòng ban này?</h3>
<div>
    <hr />
    <h4>Thông tin phòng ban</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            Id phòng ban
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentId)
        </dd>
    </dl>

    <dl class="row">
        <dt class = "col-sm-2">
            Tên phòng ban
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="DepartmentName" />
        <input type="submit" value="Xóa phòng ban" class="btn btn-danger" /> 
    </form>
</div>
