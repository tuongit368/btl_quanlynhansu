@model NhanSu.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4 w3-modal-content w3-card-4 w3-animate-zoom w3-khaki" style="padding:32px;max-width:600px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-floating mb-3">
                <input asp-for="DepartmentName" class="form-control" id="floatingDepartment" placeholder="Department" />
                <label asp-for="DepartmentName" class="control-label" for="floatingDepartment">Department</label>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary w3-margin-top w3-margin-bottom" />
            </div>
            <div>
                <a style="text-decoration: none; color: black;" asp-action="Index"> << Back to List</a>
            </div>
        </form>
    </div>
    
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
