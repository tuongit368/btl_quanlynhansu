<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NhanSu</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NhanSu.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="layout_wrapper">
        <div class="sidebar">
            <div class="sidebar-header">
                <p>Admin nhân sự</p>
            </div>
            <div class="accordion" id="accordionPanelsStayOpenExample">
  <div class="accordion-item">
    <h2 class="accordion-header" id="panelsStayOpen-headingOne">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
          Nhân sự
      </button>
    </h2>
    <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
      <div class="accordion-body">
            <div class="sidebar-link">

            <a class="sidebar-li" href="/Employee">Danh sách</a>
            </div>
            <div class="sidebar-link">

            <a class="sidebar-li" href="/Employee/Create">Thêm mới</a>
            </div>
       
      </div>
    </div>
  </div>
  <div class="accordion-item">
    <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
        Phòng ban
      </button>
    </h2>
     <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingTwo">

    <div class="accordion-body">
            <div class="sidebar-link">

            <a class="sidebar-li" href="/Department">Danh sách</a>
            </div>
            <div class="sidebar-link">

            <a class="sidebar-li" href="/Department/Create">Thêm mới</a>
            </div>
       
      </div>
     </div>
  </div>
  
</div>
           
           @* <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">Nhân sự</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Department" asp-action="Index">Phòng ban</a> *@
        </div>
        <div class="main_wrapper">
          <div style="padding:15px;background:#286690">
    <ion-icon name="menu-outline" size="large" style="font-size:76px;color:white"></ion-icon>
</div>
<div style="padding:12px">
  @RenderBody()</div>
</div>
            @* <partial name="_LoginPartial" /> *@
          
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
