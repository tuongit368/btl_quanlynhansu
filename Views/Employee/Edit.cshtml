@model NhanSu.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<div style="padding:12px">
<h4>Sửa nhân viên</h4>
<hr />

        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EmployeeId" />
            <div class="container">
    <div class="row row-cols-2">
            <div class="form-group col mt-2">
                <label asp-for="FullName" class="control-label">Tên nhân sự</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="Position" class="control-label">Vị trí</label>
                <input asp-for="Position" class="form-control" />
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="Address" class="control-label">Địa chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="Age" class="control-label">Tuổi</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="PhoneNumber" class="control-label">Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group col mt-2">
                <label asp-for="DepartmentName" class="control-label">Phòng Ban</label>
                <select asp-for="DepartmentName" class="form-control" asp-items="ViewBag.DepartmentName"></select>
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group col mt-4">
                <input type="submit" value="Lưu" class="btn btn-primary mt-2    "/>
            </div>
               </div>
</div>
        </form>
 
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
